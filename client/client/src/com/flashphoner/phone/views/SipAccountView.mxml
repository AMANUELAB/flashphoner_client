<mx:Panel xmlns:ctrl="com.flashphoner.*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" width="220" height="206" creationComplete="init()" layout="absolute" borderStyle="solid" cornerRadius="0" borderThickness="1" borderColor="#9D9D9D">
	
	<mx:Script>
		<![CDATA[
			import com.adobe.cairngorm.control.CairngormEventDispatcher;
			import com.flashphoner.Logger;
			import com.flashphoner.api.Flash_API;
			import com.flashphoner.phone.DataPhone;
			
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
				
			
			private function init():void{
				
				loginButton.addEventListener(MouseEvent.CLICK,login);

				var flash_API:Flash_API = DataPhone.getInstance().flash_API;
			
				this.sipLogin.text = flash_API.getCookie("login");
				this.sipAuthName.text = flash_API.getCookie("authName");
				this.sipPassword.text = flash_API.getCookie("pwd");
				this.sipProviderAddress.text = flash_API.getCookie("sipProviderAddress");
				this.sipProviderPort.text = flash_API.getCookie("sipProviderPort");
				
				this.sipLogin.addEventListener(Event.CHANGE,changeLoginHandler);
			}
			
			private function changeLoginHandler(event:Event):void{
				sipAuthName.text = sipLogin.text;
			}
			
			
			private function login(event:MouseEvent):void{
				
				Logger.info("SipAccountView.login() login: "+sipLogin.text+" password: "+sipPassword.text+" phoneModel.sipServer: "+sipProviderAddress.text+" phoneModel.sipProviderPort: "+sipProviderPort.text);
				
				if ((sipLogin.text==null)||(sipLogin.text.length==0)||(sipPassword.text==null)||(sipPassword.text.length==0)||(sipProviderAddress.text==null)||(sipProviderAddress.text.length==0)||(sipProviderPort.text==null)||(sipProviderPort.text.length==0)){
					mx.controls.Alert.show("All field are required!");
					return;
				}
				
				DataPhone.getInstance().viewController.showConnectingView();
				if (DataPhone.getInstance().flash_API.login("sip:"+sipLogin.text+"@"+sipProviderAddress.text+":"+sipProviderPort.text, sipPassword.text, sipAuthName.text) == 0){
					save();
				}
			}
			
			private function save():void{
				var flash_API:Flash_API = DataPhone.getInstance().flash_API;
				flash_API.setCookie("login",sipLogin.text);
				flash_API.setCookie("authName",sipAuthName.text);
				flash_API.setCookie("pwd",sipPassword.text);
				flash_API.setCookie("sipProviderAddress",sipProviderAddress.text);
				flash_API.setCookie("sipProviderPort",sipProviderPort.text);

			}			
			
			
			public function close():void{
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	
	<mx:TextInput id="sipLogin" x="75.95" y="11" width="138.05" text="Sip Login" fontSize="12" height="24" color="#5A5A5A" borderColor="#B7BABC" borderStyle="solid"/>
	<mx:TextInput id="sipAuthName" x="75.95" y="39" width="138.05" text="Sip Auth Name" height="24" fontSize="12" color="#5A5A5A" borderStyle="solid"/>
	<mx:TextInput id="sipPassword" displayAsPassword="true" x="75.95" y="67" width="138.05" text="mySipPassword" height="24" fontSize="12" color="#5A5A5A" borderStyle="solid"/>
	<mx:TextInput id="sipProviderAddress" x="75.95" y="95" width="138.05" text="127.0.0.1" fontSize="12" height="24" color="#5A5A5A" borderStyle="solid"/>
	<mx:TextInput id="sipProviderPort" x="75.95" y="122" width="138.05" text="5060" fontSize="12" height="24" color="#5A5A5A" borderStyle="solid"/>
	
	<mx:Label x="10" y="14" text="Login" fontSize="12" color="#000000"/>
	<mx:Label x="10" y="42" text="Auth Name" fontSize="12" color="#000000"/>
	<mx:Label x="8" y="68" text="Password" fontSize="12" color="#000000"/>
	<mx:Label x="9" y="100" text="Server" fontSize="12" color="#000000"/>
	<mx:Label x="9" y="128" text="Port" fontSize="12" color="#000000"/>
	<mx:Button id="loginButton" x="48" y="170" label="Login" fontSize="16" width="60" height="24" borderColor="#009800" themeColor="#009800" fillAlphas="[1.0, 1.0]" fillColors="[#39AF39, #109F10, #45D045, #17C917]" color="#FFFFFF" cornerRadius="3" fontWeight="bold"/>
	<mx:Button x="116" y="170" label="Cancel" click="close();" fontSize="16" width="60" height="24" borderColor="#009800" themeColor="#009800" fillAlphas="[1.0, 1.0]" fillColors="[#39AF39, #109F10, #45D045, #17C917]" color="#FFFFFF" cornerRadius="3" fontWeight="bold"/>
		
		
</mx:Panel>
